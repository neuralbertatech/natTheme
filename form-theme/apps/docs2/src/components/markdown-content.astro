---
import Default from "@astrojs/starlight/components/MarkdownContent.astro";

const isChangelog = Astro.originPathname.startsWith("/changelogs/");
---

<Default {...Astro.props}>
  <slot />
</Default>

{isChangelog && <style>
  .sl-markdown-content h1 {
    display: none !important;
  }
</style>}
